<% @posts.each do |post| %>
	<h2><%= link_to post.title, post_path(post.slug)%></h2>
	<div>
		<%= "#{post.content[0, 200]} ...".html_safe%>
		<%= link_to '[read more]', post_path(post.slug), :style => 'color:#333333; font-size:12px;' %>
	</div>
	<div>
		<span style="color:#333333; font-size:10px; float:right;">Posted at <%=distance_of_time_in_words_to_now post.created_at%></span>
	</div>
	<hr style="clear:both;"/>
<% end %>