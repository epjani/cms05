<%= form_for [:admin, @page] do |f|%>
	<%= f.label :title %>
	<%= f.text_field :title  %><br/>

	<%= f.label :parent_page %>
	<%= f.collection_select :parent_id, @pages, :id, :title , :include_blank => true, :selected => @page.parent ? @page.parent.id : nil %>

	<%= f.label :content %>
	<%= f.text_area :content, :style=>'width:600px' %><br/>

	<%= submit_tag 'Publish', :class => 'btn' %>
<% end %>

<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script> 

<% content_for :js do %>
<script>
$(document).ready(function() {
	new nicEditor({fullPanel : true}).panelInstance('page_content',{hasPanel : true});
});
</script>
<% end %>